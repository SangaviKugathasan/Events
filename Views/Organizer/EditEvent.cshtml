@model EventZax.Models.Event
@{
    ViewData["Title"] = "Edit Event";
}
<h2>
    <a class="btn btn-secondary btn-sm me-2" href="#" onclick="history.back();return false;">&larr; Back</a>
    Edit Event
</h2>
<form asp-action="EditEvent" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="VenueId" class="form-label">Venue</label>
        <input asp-for="VenueId" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="StartDate" class="form-label"></label>
        <input asp-for="StartDate" class="form-control" type="date" />
    </div>
    <div class="mb-3">
        <label asp-for="EndDate" class="form-label"></label>
        <input asp-for="EndDate" class="form-control" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
