@{
    ViewData["Title"] = "Register";
}
<div class="auth-box mx-auto mt-5 p-4 shadow-sm rounded" style="max-width:480px;">
    <h2 class="text-center">Register</h2>
    <form asp-action="Register" method="post">
        <div class="mb-3">
            <label>Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input type="password" name="password" class="form-control" required />
        </div>
        <div class="mb-3">
            <label>Role</label>
            <select name="role" class="form-control" required>
                <option value="Customer">Customer</option>
                <option value="Organizer">Organizer</option>
            </select>
        </div>
        <div class="d-grid">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
        @if (ViewBag.Error != null) {
            <div class="mt-3">
                <div class="alert alert-info">@ViewBag.Error</div>
            </div>
        }
    </form>

    <div class="mt-3 text-center">
        <p class="mb-1">Already have an account? <a asp-controller="Auth" asp-action="Login">Login</a></p>
        <p class="mb-0"><a asp-controller="Home" asp-action="Index">Back to Home</a></p>
    </div>
</div>
